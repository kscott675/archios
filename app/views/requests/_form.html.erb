<%= form_with(model: @request, url: requests_path, method: :post, local: true) do |form| %>
  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div class="field">
    <%= form.label :request_body %>
    <%= form.text_area :request_body %>
  </div>

  <div class="actions">
    <%= form.submit "Submit Request" %>
  </div>
<% end %>

