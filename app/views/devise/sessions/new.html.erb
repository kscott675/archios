<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Log in</h2>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.input :email,
                          label: "Email",
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email", class: 'form-control' } %>
            </div>
            <div class="form-group">
              <%= f.input :password,
                          label: "Password",
                          required: false,
                          input_html: { autocomplete: "current-password", class: 'form-control' } %>
            </div>
            <% if resource.class.respond_to?(:rememberable) && resource.class.rememberable %> <!-- Check if rememberable -->
              <div class="form-check mb-3">
                <%= f.input :remember_me, as: :boolean, label: "Remember me", class: "form-check-input" %>
                <label class="form-check-label" for="<%= f.object_name %>_<%= f.input_name %>">Remember me</label>
              </div>
            <% end %>

            <div class="form-group">
              <%= f.button :submit, "Log in", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
