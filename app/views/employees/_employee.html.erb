<div class="container-fluid p-3">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body text-center">
          <div class="media">
            <%= image_tag("#{employee.profile_picture}", alt: "Profile Picture", class: "rounded-circle mb-3 p-2 bg-#{badge_color(employee.status&.text)} border border-light rounded-circle", width: 100, height: 100) %>
          </div>
          <div class="media-body">
            <h1 class="card-title">
              <%= employee.full_name %>
            </h1>
            <p>
            <%= render "status", employee: employee %>
            <span class="badge text-bg-<%= badge_color(employee.status.text)%>"><%= employee.status.text %></span>
            </p>
            <hr>
            <p class="card-text text-muted">
              <%= employee.time_zone %>
            </p>
            <p class="card-text">
             Software Engineer
            </p>
            <hr>
            <%= render "timesheet_entries/hours_worked", employee: employee%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
